<Defs>

  <!--=============== Medicine ====================-->
  <ThingDef ParentName="MedicineBase">
    <defName>MedicineEarlyMedievalMM</defName>
    <label>early medieval medicine</label>
    <description>A box containing various herbs, tinctures, a trepanation kit, and strips of clean cloth.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Medicine/MedicineEarlyMedieval</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.85</drawSize>
    </graphicData>
    <techLevel>Medieval</techLevel>
    <statBases>
      <MarketValue>16</MarketValue>
      <Mass>0.35</Mass>
      <Flammability>1.3</Flammability>
      <MedicalPotency>0.80</MedicalPotency>
      <MedicalQualityMax>0.90</MedicalQualityMax>
      <DeteriorationRate>6</DeteriorationRate>
	  <WorkToMake>700</WorkToMake>
    </statBases>
    <costList>
      <MedicineHerbal>2</MedicineHerbal>
      <Cloth>10</Cloth>
    </costList>
    <recipeMaker>
      <workSpeedStat>DrugSynthesisSpeed</workSpeedStat>
      <workSkill>Intellectual</workSkill>
      <recipeUsers>
        <li>CraftingSpot</li>
		<li>DrugLab</li>
      </recipeUsers>
      <researchPrerequisite>EarlyMedievalMedicine</researchPrerequisite>
      <skillRequirements>
        <Crafting>4</Crafting>
        <Intellectual>4</Intellectual>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

